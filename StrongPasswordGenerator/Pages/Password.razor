@using PasswordLib;
@page "/password"

<PageTitle>Password generator</PageTitle>

<h1>Password generator</h1>

<div class="container">
	<div class="row mb-2">
		<div class="col-3">
			Password length:
		</div>
		<div class="col-3">
			<input type="number" min="6" max="100" name="password_len" class="form-control" @bind="@pass_length" />
		</div>
	</div>
	<div class="row mb-2">
		<div class="col-3">
			Special characters:
		</div>
		<div class="col-5">
			<input type="checkbox" name="special_chars" class="form-check-input" id="special_len" checked="@special_chars" />
			<label class="form-check-label" for="special_len">
				Special characters: <strong>! &#64; # $ % etc.</strong>
			</label>
		</div>
	</div>
	<div class="row mb-2">
		<div class="col-3">
			Should include characters:
		</div>
		<div class="col-3">
			<input type="text" name="should_include" class="form-control" placeholder="abc" @bind="@include_chars" />
		</div>
	</div>
	<div class="row mb-2">
		<div class="col-3">
			Should exclude characters:
		</div>
		<div class="col-3">
			<input type="text" name="should_exclude" class="form-control" placeholder="abc" @bind="@exclude_chars" />
		</div>
	</div>
	<div class="row mb-2">
		<div class="col-3">
			Include uppercase characters
		</div>
		<div class="col-5">
			<input type="checkbox" name="uppercase" class="form-check-input" id="uppercase" @bind="@upper_chars" />
			<label class="form-check-label" for="uppercase">
				Uppercase characters: <strong>A-Z</strong>
			</label>
		</div>
	</div>
	<div class="row mb-2">
		<div class="col-3">
			Include lowercase characters
		</div>
		<div class="col-5">
			<input type="checkbox" name="lowercase" class="form-check-input" id="lowercase" @bind="@lower_chars" />
			<label class="form-check-label" for="lowercase">
				Lower characters: <strong>a-z</strong>
			</label>
		</div>
	</div>
	<div class="row mb-2">
		<div class="col-3">
			Include numbers
		</div>
		<div class="col-5">
			<input type="checkbox" name="number" class="form-check-input" id="number" @bind="@numbers" />
			<label class="form-check-label" for="lowercase">
				Numbers: <strong>0123456789</strong>
			</label>
		</div>
	</div>
	<div class="row mb-2">
		<div class="col-3">
			Include similar characters
		</div>
		<div class="col-5">
			<input type="checkbox" name="similar" class="form-check-input" id="similar" @bind="@similar_chars" />
			<label class="form-check-label" for="similar">
				Similar characters: <strong>a&#64; il1 oO0 etc.</strong>
			</label>
		</div>
	</div>
	<div class="row mb-2">
		<div class="col-3">
			Feature
		</div>
		<div class="col-5">
			<div class="form-check form-switch">
				<input class="form-check-input" type="radio" name="feature" id="easy_say" @bind="@easy_say">
				<label class="form-check-label" for="easy_say">
					Easy to say
				</label>
			</div>
			<div class="form-check form-switch">
				<input class="form-check-input" type="radio" name="feature" id="easy_read" @bind="@easy_read">
				<label class="form-check-label" for="easy_read">
					Easy to read
				</label>
			</div>
			<div class="form-check form-switch">
				<input class="form-check-input" type="radio" name="feature" id="not_all" @bind="@not_all" checked>
				<label class="form-check-label" for="not_all">
					Not of all
				</label>
			</div>
		</div>
	</div>
	<div class="row mb-2">
		<div class="col-3">
			Contain your string:
		</div>
		<div class="col-3">
			<input type="text" name="your_string" class="form-control" placeholder="abc" @bind="@your_string" />
		</div>
	</div>
	<div class="row mb-2">
		<div class="col-auto">
			<button type="button" class="btn btn-primary">Generate password</button>
		</div>
		<div class="col-auto">
			<button type="button" class="btn btn-warning">Copy password</button>
		</div>
	</div>
	<div class="row mb-2">
		<div class="col-auto">
			New password
		</div>
		<div class="col-4">
			<input type="text" name="new_password" class="form-control" id="new_password" readonly />
		</div>
	</div>
</div>

@code {
	int pass_length = Constants.PASSWORD_LENGTH;
	bool special_chars = true, upper_chars = true, lower_chars = true, numbers = true, similar_chars = true, easy_say = false, easy_read = false, not_all = true;
	string include_chars = "", exclude_chars = "", your_string = "";
}
