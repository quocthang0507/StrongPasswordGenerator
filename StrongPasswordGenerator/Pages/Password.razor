@page "/password"

<PageTitle>Password generator</PageTitle>

<h1>Password generator</h1>

<div class="container">
	<div class="row mb-2">
		<div class="col-3">
			Password length:
		</div>
		<div class="col-3">
			<input type="number" min="6" max="100" name="password_len" class="form-control" value="8" />
		</div>
	</div>
	<div class="row mb-2">
		<div class="col-3">
			Special characters:
		</div>
		<div class="col-5">
			<input type="checkbox" name="special_char" class="form-check-input" id="special_len" checked />
			<label class="form-check-label" for="special_len">
				Special characters: <strong>! &#64; # $ % etc.</strong>
			</label>
		</div>
	</div>
	<div class="row mb-2">
		<div class="col-3">
			Should include characters:
		</div>
		<div class="col-3">
			<input type="text" name="should_include" class="form-control" />
		</div>
	</div>
	<div class="row mb-2">
		<div class="col-3">
			Should exclude characters:
		</div>
		<div class="col-3">
			<input type="text" name="should_exclude" class="form-control" />
		</div>
	</div>
	<div class="row mb-2">
		<div class="col-3">
			Include uppercase characters
		</div>
		<div class="col-5">
			<input type="checkbox" name="uppercase" class="form-check-input" id="uppercase" checked />
			<label class="form-check-label" for="uppercase">
				Uppercase characters: <strong>A-Z</strong>
			</label>
		</div>
	</div>
	<div class="row mb-2">
		<div class="col-3">
			Include lowercase characters
		</div>
		<div class="col-5">
			<input type="checkbox" name="lowercase" class="form-check-input" id="lowercase" checked />
			<label class="form-check-label" for="lowercase">
				Lower characters: <strong>a-z</strong>
			</label>
		</div>
	</div>
	<div class="row mb-2">
		<div class="col-3">
			Include numbers
		</div>
		<div class="col-5">
			<input type="checkbox" name="number" class="form-check-input" id="number" checked />
			<label class="form-check-label" for="lowercase">
				Numbers: <strong>0123456789</strong>
			</label>
		</div>
	</div>
	<div class="row mb-2">
		<div class="col-3">
			Include similar characters
		</div>
		<div class="col-5">
			<input type="checkbox" name="similar" class="form-check-input" id="similar" checked />
			<label class="form-check-label" for="similar">
				Similar characters: <strong>a&#64; il1 oO0 etc.</strong>
			</label>
		</div>
	</div>
	<div class="row mb-2">
		<div class="col-3">
			Feature
		</div>
		<div class="col-5">
			<div class="form-check form-switch">
				<input class="form-check-input" type="radio" name="feature" id="easy_say">
				<label class="form-check-label" for="easy_say">
					Easy to say
				</label>
			</div>
			<div class="form-check form-switch">
				<input class="form-check-input" type="radio" name="feature" id="easy_read">
				<label class="form-check-label" for="easy_read">
					Easy to read
				</label>
			</div>
			<div class="form-check form-switch">
				<input class="form-check-input" type="radio" name="feature" id="not_all" checked>
				<label class="form-check-label" for="not_all">
					Not of all
				</label>
			</div>
		</div>
	</div>
	<div class="row mb-2">
		<div class="col-auto">
			<button type="button" class="btn btn-primary">Generate password</button>
		</div>
		<div class="col-auto">
			<button type="button" class="btn btn-warning">Copy password</button>
		</div>
	</div>
	<div class="row mb-2">
		<div class="col-auto">
			New password
		</div>
		<div class="col-4">
			<input type="text" name="new_password" class="form-control" id="new_password" readonly />
		</div>
	</div>
</div>

